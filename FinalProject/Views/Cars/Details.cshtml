@model FinalProject.Models.Car

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-sm-3">
            <img src="@Model.Image" alt="" class="img-fluid" width="350" height="350">
        </div>
        <div class="col-sm-9">
            <table class="table table-bordered table-striped">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Brand)</th>
                    <td>@Html.DisplayFor(model => model.Brand)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Model)</th>
                    <td>@Html.DisplayFor(model => model.Model)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ModelYear)</th>
                    <td>@Html.DisplayFor(model => model.ModelYear)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Color)</th>
                    <td>@Html.DisplayFor(model => model.Color)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Bought)</th>
                    <td>@Html.DisplayFor(model => model.Bought)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Sell)</th>
                    <td>@Html.DisplayFor(model => model.Sell)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.AgentName)</th>
                    <td>@Html.DisplayFor(model => model.AgentName)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                    <td>
                        @if (Model.Status == "Available")
                        {
                            <span class="badge bg-success">Available</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Sold</span>
                        }
                        </td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Phone)</th>
                    <td>@Html.DisplayFor(model => model.Phone)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
            </table>
        </div>
    </div>
</div>

<div class="text-center mt-4">
     @if (User.Identity.IsAuthenticated)
                    {
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.Id">Edit</a> 
                    }
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
